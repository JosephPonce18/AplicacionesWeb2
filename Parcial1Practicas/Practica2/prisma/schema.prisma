// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
  directUrl = env("DIRECT_URL")
}

model Foro {
  id               Int      @id @default(autoincrement())
  email            String
  id_comunity      Int
  subject          String?
  description      String
  date_publication DateTime?
  date_update      DateTime?
  just_now         Boolean
  answers          Answer[]
  responses        Response[]
}

model Answer {
  id      Int     @id @default(autoincrement())
  Foro_id Int
  message String?
  foro    Foro    @relation(fields: [Foro_id], references: [id])
}

model Response {
  id      Int     @id @default(autoincrement())
  Foro_id Int
  message String?
  foro    Foro    @relation(fields: [Foro_id], references: [id])
}
